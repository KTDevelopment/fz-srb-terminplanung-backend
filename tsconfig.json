{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/"
    },
    "exclude": [
        "node_modules",
        "dist",
        "test-reports",
        "test",
        "jest.config.js",
        "client",
        "scripts",
        "gulpfile.js"
    ]
}
